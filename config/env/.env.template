# Project Athena Environment Configuration
# Copy this file to .env and fill in the actual values

# ============================================================================
# Home Assistant Configuration
# ============================================================================
# Get token from thor cluster: kubectl -n automation get secret home-assistant-credentials -o jsonpath='{.data.long-lived-token}' | base64 -d
# Or generate new token: https://192.168.10.168:8123 → Profile → Long-Lived Access Tokens
HA_URL=https://192.168.10.168:8123
HA_TOKEN=your_long_lived_token_here

# ============================================================================
# Ollama Configuration (Mac Studio)
# ============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_SMALL_MODEL=phi3:mini-q8
OLLAMA_MEDIUM_MODEL=llama3.1:8b-q4
OLLAMA_LARGE_MODEL=llama3.1:13b-q4

# ============================================================================
# LiteLLM Gateway Configuration
# ============================================================================
# Generate a secure key: openssl rand -hex 32
LITELLM_MASTER_KEY=sk-your_secure_key_here
LITELLM_PORT=8000

# ============================================================================
# Mac mini Services (Vector DB + Cache)
# ============================================================================
# Replace with actual Mac mini IP once assigned
QDRANT_URL=http://192.168.10.181:6333
REDIS_URL=redis://192.168.10.181:6379/0

# ============================================================================
# RAG API Keys (Phase 1 - Required)
# ============================================================================
# OpenWeatherMap: https://openweathermap.org/api (FREE, 1000 calls/day)
# Get from thor cluster: kubectl -n automation get secret project-athena-credentials -o jsonpath='{.data.openweathermap-api-key}' | base64 -d
OPENWEATHER_API_KEY=your_key_here

# FlightAware: https://www.flightaware.com/commercial/flightxml/ (FREE, 100/month)
# Will be stored in thor cluster when acquired
FLIGHTAWARE_API_KEY=your_key_here

# TheSportsDB: https://www.thesportsdb.com/api.php (FREE tier or $2/month)
# Free tier key is "1" or "3" for testing, paid tier provides full access
THESPORTSDB_API_KEY=1

# ============================================================================
# RAG API Keys (Phase 2 - Future)
# ============================================================================
# Defer these until Phase 2
# NEWSAPI_KEY=defer_to_phase2
# SPOONACULAR_API_KEY=defer_to_phase2
# TMDB_API_KEY=defer_to_phase2
# YELP_API_KEY=defer_to_phase2

# ============================================================================
# Feature Flags
# ============================================================================
# All Phase 2+ features disabled for Phase 1
ENABLE_GUEST_MODE=false
ENABLE_SHARE_SERVICE=false
ENABLE_CROSS_MODEL_VALIDATION=false

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Caching Configuration
# ============================================================================
REDIS_MAX_MEMORY=2gb
REDIS_EVICTION_POLICY=allkeys-lru

# Weather cache: 48 hours
CACHE_TTL_WEATHER=172800

# Airport info cache: 1 hour
CACHE_TTL_AIRPORTS=3600

# Sports cache: 15 minutes (live games) / 24 hours (historical)
CACHE_TTL_SPORTS_LIVE=900
CACHE_TTL_SPORTS_HISTORICAL=86400

# ============================================================================
# Performance Configuration
# ============================================================================
# Target latencies (seconds)
TARGET_LATENCY_CONTROL=3.5
TARGET_LATENCY_KNOWLEDGE=5.5

# Model selection thresholds (token counts)
SMALL_MODEL_MAX_TOKENS=150
MEDIUM_MODEL_MAX_TOKENS=500

# ============================================================================
# Airport Configuration
# ============================================================================
# Monitored airports (comma-separated ICAO codes)
MONITORED_AIRPORTS=KPHL,KBWI,KEWR,KLGA,KJFK,KIAD,KDCA

# ============================================================================
# Sports Configuration
# ============================================================================
# Focus teams (comma-separated)
FOCUS_TEAMS=Baltimore Ravens,Baltimore Orioles

# ============================================================================
# Network Configuration
# ============================================================================
# Service hostnames/IPs
MAC_STUDIO_IP=192.168.10.167
MAC_MINI_IP=192.168.10.181
HA_IP=192.168.10.168

# ============================================================================
# Security Notes
# ============================================================================
# NEVER commit the .env file to git!
# This template is safe to commit, but .env contains secrets.
# The .gitignore file should include:
#   config/env/.env
#   .env
#   *.env
